{
    "servers": [
        {
            "size": "s-2vcpu-4gb",
            "image": "nixos-base",
            "region": "ams3",
            "domains": ["prospector.nc.jctf.pro"],
            "lb_connections": [],
            "firewall": {
                "inbound_rules": [
                    {
                        "protocol": "tcp",
                        "ports": "1337",
                        "addresses": ["0.0.0.0/0", "::/0"]
                    }
                ],
                "outbound_rules": [
                    {
                        "protocol": "tcp",
                        "ports": "all",
                        "addresses": ["0.0.0.0/0", "::/0"]
                    },
                    {
                        "protocol": "udp",
                        "ports": "all",
                        "addresses": ["0.0.0.0/0", "::/0"]
                    }
                ]
            },
            "monitoring": {
                "metrics": [
                    {
                        "name": "healthcheck-tcp_connect",
                        "module": "tcp_connect",
                        "interval": "10s",
                        "targets": ["prospector.nc.jctf.pro:1337"]
                    },
                    {
                        "name": "metrics",
                        "module": "host",
                        "interval": "10s",
                        "targets": [
                            "prospector.nc.jctf.pro:9100",
                            "prospector.nc.jctf.pro:9101"
                        ]
                    }
                ]
            }
        }
    ]
}